<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User"
            android:id="@+id/principal" android:layout_margin="10dip"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_user"
            android:hint="ID User "
            android:editable="false"

            android:layout_margin="10dip"
            android:layout_below="@id/principal"/>
        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:text="ACCION"
            android:layout_below="@+id/id_user"
            android:layout_marginLeft="30dip"
            android:background="@drawable/boton"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:textColor="@color/white" />
        <ListView
            android:id="@+id/lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="1dip"

            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:layout_below="@id/btn"></ListView>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emptyElement"
            android:text="There aren\'t any elements at this moment"
            android:textStyle="bold"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_marginTop="20dip"
            android:layout_centerInParent="true"
            android:layout_below="@id/btn"
            android:textColor="@android:color/darker_gray"/>
    </RelativeLayout>
</ScrollView>